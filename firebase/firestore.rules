// carrier-ops-hub/firebase/firestore.rules

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // TODO: Define proper security rules in Phase 3
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Default deny all (customize per collection)
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if false; // Admin only via functions
    }
    
    // Loads collection
    match /loads/{loadId} {
      allow read: if isAuthenticated();
      allow write: if hasRole('DISPATCHER') || hasRole('OWNER');
    }
  }
}
