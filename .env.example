# carrier-ops-hub/.env.example

# ====================================
# apps/web (Vite Frontend)
# ====================================
# Copy these into apps/web/.env.local for local development
# DO NOT commit .env.local files to version control
#
# IMPORTANT: All VITE_* variables are exposed to the client bundle.
# Do NOT put secrets here. These values are public.
#
# For production (Vercel), add these via Vercel dashboard or CLI:
#   vercel env add VITE_FIREBASE_API_KEY production

VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Set to "true" to connect to Firebase Emulators (localhost)
# Only works in development mode (import.meta.env.DEV)
VITE_USE_FIREBASE_EMULATORS=false

# Optional: App environment identifier
VITE_APP_ENV=development
