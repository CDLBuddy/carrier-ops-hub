{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES2022"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES2022",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strict": false,
        "skipLibCheck": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}